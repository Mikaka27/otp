$TTL 3600
@   IN SOA ns.otptest. admin.otptest. (
        2025101601  ; serial
        3600        ; refresh
        900         ; retry
        1209600     ; expire
        3600 )      ; minimum TTL

    IN NS ns.otptest.

; No A record for ns.otptest â€” expected to be resolved dynamically

; NAPTR records for Diameter discovery
@    IN NAPTR 10 100 "s" "Diameter.sctp" "" _diameter._sctp.otptest.
@    IN NAPTR 20 100 "s" "Diameter.tcp"  "" _diameter._tcp.otptest.

; SRV records for Diameter over SCTP and TCP
_diameter._sctp IN SRV 10 50 3868 diameter1.otptest.
_diameter._tcp  IN SRV 10 50 3868 diameter2.otptest.

; A records for Diameter servers
diameter1 IN A 192.0.2.10
diameter2 IN A 192.0.2.20